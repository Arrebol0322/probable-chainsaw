<UserControl
    x:Class="ProductMonitor.MyUserControl.RadarUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductMonitor.MyUserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="LayGrid">
        <Canvas x:Name="mainCanvas" />
        <!--  雷达图框架多边形  -->
        <Polygon x:Name="P1" Stroke="#44ffffff"/>
        <Polygon x:Name="P2" Stroke="#44ffffff"/>
        <Polygon x:Name="P3" Stroke="#44ffffff"/>
        <Polygon x:Name="P4" Stroke="#44ffffff"/>
        <!--  数据多边形  -->
        <Polygon x:Name="P5" Stroke="Orange" Fill="#550091F0"/>
    </Grid>
</UserControl>
